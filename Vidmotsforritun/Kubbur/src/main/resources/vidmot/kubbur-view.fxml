<VBox spacing="10" alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="vidmot.KubburController" stylesheets="/vidmot/css/kubbur.css">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <GridPane alignment="CENTER" fx:id="fxBord">

    <VBox spacing="5">
        <!-- Game Status Messages with increased font size -->
        <HBox spacing="5">
            <Label fx:id="statusLabel" style="-fx-font-size: 24px;"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Stigin eru " style="-fx-font-size: 24px;"/>
            <Label fx:id="stiginLabel" style="-fx-font-size: 24px;"/>
        </HBox>
        <HBox spacing="5" >
            <Label text="Veldu tÃ¶lu 1-9 " style="-fx-font-size: 24px;" />
            <TextField fx:id="fxTala" onKeyReleased="#onNyTala" prefWidth="40" />
        </HBox>
    </VBox>
    </GridPane>
    <!-- Game 3x3 Grid -->
    <GridPane alignment="CENTER" >
        <!-- Row 1 -->
        <Button styleClass="kubbur1" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button styleClass="kubbur2" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button styleClass="kubbur3" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

        <!-- Row 2 -->
        <Button styleClass="kubbur4" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button styleClass="kubbur5" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button styleClass="kubbur6" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

        <!-- Row 3 -->
        <Button styleClass="kubbur7" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Button styleClass="kubbur8" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button styleClass="kubbur9" onAction="#onSetjaStykki" minHeight="100" minWidth="100" maxHeight="100" maxWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
